@model GerenciamentoMercadoria.Models.SaidaMercadoria

<div id="staticBackdrop" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Detalhes da saída de mercadoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-hover">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantidade)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Quantidade)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Data)
                            </th>
                            <td>
                                @Model.Data.ToString("dd/MM/yyyy HH:mm")
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Local)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Local)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <h5 class="modal-title" id="staticBackdropLabel">Detalhes da mercadoria</h5>
                <hr />
                <table class="table table-striped table-hover">
                    <tbody>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Mercadoria)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Mercadoria.Nome)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Mercadoria.NumRegistro)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Mercadoria.NumRegistro)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Mercadoria.Fabricante)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Mercadoria.Fabricante)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Mercadoria.Tipo)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Mercadoria.Tipo)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Mercadoria.Descricao)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Mercadoria.Descricao)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>