@model Mercadoria

@{
    Layout = "~/Views/Shared/_LayoutModal.cshtml";
}

<div id="staticBackdrop" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content forms">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Nova Mercadoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body row">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Nome" class="form-control" id="floatingInput" placeholder="Nome" />
                        <label asp-for="Nome" for="floatingInput" class="control-label"></label>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="NumRegistro" class="form-control" id="floatingInput" placeholder="NumRegistro" />
                        <label asp-for="NumRegistro" for="floatingInput" class="control-label"></label>
                        <span asp-validation-for="NumRegistro" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Fabricante" class="form-control" id="floatingInput" placeholder="Fabricante" />
                        <label asp-for="Fabricante" for="floatingInput" class="control-label"></label>
                        <span asp-validation-for="Fabricante" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Tipo" class="form-control" id="floatingInput" placeholder="Tipo" />
                        <label asp-for="Tipo" for="floatingInput" class="control-label"></label>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Descricao" class="form-control" id="floatingInput" placeholder="Descricao" />
                        <label asp-for="Descricao" for="floatingInput" class="control-label"></label>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Cadastrar" class="btn btn-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-check2" viewBox="4 4 7 10">
                                <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                            </svg> Adicionar
                        </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
